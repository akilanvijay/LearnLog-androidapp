<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akil.learnlog"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/hand_drawn_essay_illustration"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hand_drawn_essay_illustration"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnLog"
        tools:targetApi="34">

        <!-- Declare SplashActivity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LearnLog.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" >
        <meta-data android:name="android.lib_name"
            android:value="" />
        </activity>

        <!-- Declare MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Declare CreateAccountActivity -->
        <activity
            android:name=".CreateAccountActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Declare NoteDetailsActivity -->
        <activity
            android:name=".NoteDetailsActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

    </application>
</manifest>
